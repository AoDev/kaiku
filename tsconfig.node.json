{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.rsbuild.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "electron.rsbuild.config.ts",
    "rsbuild-main.config.ts",
    "src/types/*.ts",
    "tools/**/*.ts",
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx"
  ],
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx", "**/*.test.ts", "**/*.test.tsx"],
  "compilerOptions": {
    "composite": true,
    "types": ["vitest/globals"]
  }
}
